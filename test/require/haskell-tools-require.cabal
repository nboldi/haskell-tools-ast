                     , uniplate             >=1.6   && <2.0
                     , split                >=0.2   && <0.3
                     , template-haskell     >=2.11  && <3.0
                     , MissingH             >=1.3   && <2.0
                     , ghc-paths            >=0.1   && <0.2
                     , directory            >=1.2   && <1.3
                     , transformers         >=0.5   && <0.6
                     , time                 >=1.5   && <2.0
                     , filepath             >=1.4   && <2.0
                     , either               >=4.0   && <5.0
                     , HUnit                >=1.3   && <2.0
                     , hpc-coveralls        >=1.0   && <2.0
