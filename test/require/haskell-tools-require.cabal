                     , ghc                  >=8.0   && <8.1
                     , mtl                  >=2.2   && <2.3
                     , containers           >=0.5   && <0.6
                     , references           >=0.3.2 && <1.0
                     , uniplate             >=1.6   && <2.0
                     , structural-traversal >=0.1   && <0.2
